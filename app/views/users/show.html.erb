<div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <%= render 'users/list', user: @user %>

      <h1>New book</h1>
      <%= form_with model:@book, method: :post, local:true do |f| %>
        <p>Title</p>
          <%= f.text_field :title %>
        <p>Opinion</p>
          <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>

    </div>


    <div class="col-md-8 d-inline-block offset-md-1">
  
    <h1>Books</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>

    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to(user_path(book.user)) do %>
            <%= image_tag book.user.get_profile_image(40,40) %>
          <% end %>
        </td>
        <td>
          <%= link_to(book_path(book)) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
     <% end %>
     </table>

    </div>

  </div>
</div>
