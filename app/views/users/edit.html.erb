<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">


<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
  <p>Name</p>
    <%= f.text_field :name %>
  <p>Image</p>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <p>Introduction</p>
    <%= f.text_area :introduction %>

  <p><%= f.submit 'Update User' %></p>
<% end %>



    </div>
  </div>
</div>