<div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <%= render 'users/list', user: @user %>

      <h1>New book</h1>
      <%= form_with model:@book, method: :post, local:true do |f| %>
        <p>Title</p>
          <%= f.text_field :title %>
        <p>Opinion</p>
          <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>

    </div>

    <div class="col-md-8 d-inline-block offset-md-1">
  
      <h1>Users</h1>
      <table class="table">
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(40,40) %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to "Show", user_path(user) %>
        </td>
      </tr>
      <% end %>
      </table>
    </div>

  </div>
</div>